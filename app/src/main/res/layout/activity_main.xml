<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.berchina.progressbar.HorizontalProgressBar
            android:id="@+id/hpb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:max="100"
            android:padding="20dp"
            android:progress="30"
            app:text_offset="10dp"
            />

        <com.berchina.progressbar.HorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:max="100"
            android:padding="20dp"
            android:progress="0"
            app:text_offset="10dp"
            app:text_size="15sp"
            />


        <com.berchina.progressbar.HorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:max="100"
            android:padding="20dp"
            android:progress="100"
            app:text_offset="10dp"
            app:text_size="15sp"
            />


        <com.berchina.progressbar.HorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:max="100"
            android:padding="20dp"
            android:progress="18"
            app:left_color="#ff00ff"
            app:right_color="#e00100"
            app:right_height="10dp"
            app:text_offset="10dp"
            app:text_size="26sp"
            />

        <com.berchina.progressbar.HorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:max="100"
            android:padding="20dp"
            android:progress="18"
            app:left_color="#ff00ff"
            app:left_height="5dp"
            app:right_color="#e00100"
            app:right_height="10dp"
            app:text_offset="10dp"
            app:text_size="8sp"
            />

    </LinearLayout>
</ScrollView>
